<div class="banner" style="background-image: linear-gradient(rgba(0, 0, 0, 0.2), rgba(0, 0, 0, 0.1)), url(https://img.maximummedia.ie/joe_.jpg)">
  <h1 class="title">Cocktail Heaven</h1>
</div>
<div class="container">
    <ul class="cocktail-list">
    <% @cocktails.each do |cocktail| %>
      <li class="card col-12"> <%= (cl_image_tag cocktail.photo, height: 300, width: 400, crop: :fill) %> <%= link_to cocktail.name, cocktail_path(cocktail) %> </li>
    <% end %>
    </ul>
</div>
