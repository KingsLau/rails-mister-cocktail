<h3>
  <%= @cocktail.name %>
  <%= link_to cocktail_path(@cocktail), method: :delete, data:{confirm: "Are you sure you want to delete this cocktail?"} do %>
    <i class='far fa-trash-alt'></i>
  <% end %>
</h3>
<div>
  <%= cl_image_tag @cocktail.photo, height: 300, width: 400, crop: :fill %>
</div>
<h2>Make it yourself!</h2>
<ul class="doses-list">
  <% @cocktail.doses.each do |dose| %>
    <li> <%= dose.description %> -- <%= dose.ingredient.name %> <%= link_to dose_path(dose), method: :delete, data:{confirm: "Are you sure you want to delete this dose?"} do %>
    <i class='far fa-trash-alt'></i>
    </li>
  <% end %>
<% end %>
</ul>
<p><%= link_to "Add a Dose", new_cocktail_dose_path(@cocktail) %></p>

