<div class="cocktail-container">
  <div>
    <%= cl_image_tag @cocktail.photo, height: 300, width: 400, crop: :fill %>
  </div>
  <h3>
    <%= @cocktail.name %>

  </h3>
  <h5>Ingredients List:</h5>
  <ul class="doses-list">
    <% @cocktail.doses.each do |dose| %>
      <li> <%= dose.description %> -- <%= dose.ingredient.name %> <%= link_to dose_path(dose), method: :delete, data:{confirm: "Are you sure you want to delete this ingredient?"} do %>
      <i class='far fa-trash-alt'></i>
      </li>
    <% end %>
  <% end %>
  </ul>
  <p><%= link_to "Add an Ingredient", new_cocktail_dose_path(@cocktail), class: "btn btn-primary" %> <%= link_to cocktail_path(@cocktail), method: :delete, data:{confirm: "Are you sure you want to delete this cocktail?"} do %>
      <p class="btn btn-primary">Delete this cocktail?</p>
    <% end %></p>
</div>
