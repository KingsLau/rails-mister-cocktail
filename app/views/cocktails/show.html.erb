<h3> <%= @cocktail.name %></h3>
<ul>
  <% @cocktail.doses.each do |dose| %>
    <li> <%= dose.description %> -- <%= dose.ingredient.name %> </li>
    <p><%= link_to "Add a Dose", new_cocktail_dose_path(@cocktail) %></p>
      <%= link_to dose_path(dose), method: :delete, data:{confirm: "Are you sure you want to delete this dose?"} do %>
        <i class='far fa-trash-alt'></i>
      <% end %>
  <% end %>
</ul>
